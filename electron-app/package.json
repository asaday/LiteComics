{
    "name": "litecomics-desktop",
    "version": "1.0.0",
    "description": "LiteComics Desktop Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.litecomics.desktop",
        "productName": "LiteComics",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "menu.js",
            "ipc-handlers.js",
            "settings.html",
            "settings.js"
        ],
        "extraResources": [
            {
                "from": "../server.js",
                "to": "server.js"
            },
            {
                "from": "../public",
                "to": "public"
            },
            {
                "from": "../node_modules",
                "to": "node_modules",
                "filter": [
                    "!node_modules/.bin/**"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon.png"
        }
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "express": "^4.18.2",
        "adm-zip": "^0.5.10"
    }
}